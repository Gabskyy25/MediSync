<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4FAF93">

    <androidx.cardview.widget.CardView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#4FAF93"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/backbtn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/leftchevron" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Contacts"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#ffffff" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarContacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:layout_marginEnd="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/contacthehe"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_below="@id/header"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext_background1"
        android:hint="Search Contact"
        android:inputType="text"
        android:paddingStart="16dp"
        android:textColor="#fcf9f2"
        android:textSize="11sp"
        android:textStyle="bold" />

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="25dp"
        android:layout_below="@id/contacthehe"
        android:layout_marginStart="25dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/sort" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contacthehe"
        android:layout_marginStart="61dp"
        android:layout_marginTop="9dp"
        android:text="Sort by:"
        android:textSize="14sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewContacts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/contacthehe"
        android:layout_marginTop="35dp"
        android:background=" #7FE1C3"
        android:padding="16dp"
        android:scrollbars="vertical" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/botnav"
        android:background="#4FAF93"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recyclerViewContacts"
        app:menu="@menu/bot_menu"
        android:layout_marginTop="-79dp" />

</RelativeLayout>
