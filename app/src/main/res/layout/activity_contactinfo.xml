<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4FAF93">

    <androidx.cardview.widget.CardView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#fcf9f2"
        app:cardElevation="12dp">

        <LinearLayout
            android:background="#4FAF93"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/backbtn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/leftchevron" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Contacts"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#ffffff" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarContacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:layout_marginEnd="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/contacthehe"
        android:layout_width="495dp"
        android:layout_height="28dp"
        android:background="@drawable/edittext_background1"
        android:layout_below="@id/header"
        android:layout_marginTop="11dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="15dp"
        android:hint="Search Contact"
        android:textSize="12sp"
        android:paddingStart="16dp"
        android:textStyle="bold"
        android:textColor="#fcf9f2" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:layout_below="@id/header"
        android:layout_marginStart="26dp"
        android:layout_marginTop="43dp"
        android:background="@drawable/sort" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:text="Sort by: "
        android:layout_marginTop="57dp"
        android:layout_marginStart="70dp"
        android:textSize="14sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewContacts"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_below="@id/contacthehe"
        android:padding="16dp"
        android:layout_marginTop="28dp"
        android:background=" #7FE1C3"
        android:scrollbars="vertical" />

     <ImageButton
    android:id="@+id/btnAddInfo"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    android:layout_marginStart="24dp"
    android:layout_marginTop="55dp"
    android:layout_marginEnd="26dp"
    android:layout_marginBottom="90dp"
    android:background="@drawable/rounded_button2"
    android:contentDescription="Add Contact Info"
    android:padding="12dp"
    android:scaleType="centerInside"
    android:src="@drawable/outline_add_24" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/botnav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:menu="@menu/bot_menu"
        android:layout_below="@id/recyclerViewContacts"
        android:background="#4FAF93"/>

</RelativeLayout>
