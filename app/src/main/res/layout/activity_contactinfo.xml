<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9FBF4">

    <androidx.cardview.widget.CardView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#fcf9f2"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/backbtn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/backbtn"
                app:tint="#231f20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Contacts"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#231f20" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarContacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:layout_marginEnd="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/contacthehe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginTop="18dp"
        android:layout_marginStart="20dp"
        android:text="Your Contacts"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#215357" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewContacts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/contacthehe"
        android:layout_above="@id/btnAddInfo"
        android:padding="16dp"
        android:scrollbars="vertical" />

    <ImageButton
        android:id="@+id/btnAddInfo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="24dp"
        android:background="@drawable/roundedbutton"
        android:elevation="8dp"
        android:padding="12dp"
        android:scaleType="centerInside"
        android:src="@android:drawable/ic_input_add"
        app:tint="#63703d"
        android:contentDescription="Add Contact Info" />

</RelativeLayout>
