<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9fbf4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- HEADER -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            app:cardCornerRadius="0dp"
            app:cardBackgroundColor="#4FAF93">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/backbtn"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/backbtn"
                    app:tint="#ffffff"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Contacts"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"/>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbarContacts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- SEARCH -->
        <EditText
            android:id="@+id/contacthehe"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:background="@drawable/border_bg"
            android:hint="Search contact"
            android:textSize="14sp"
            android:paddingStart="16dp"
            android:textColor="#ffffff"
            android:textStyle="bold"/>

        <!-- SORT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/sort"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sort by"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewContacts"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:background="#e9fbf4"
            android:scrollbars="vertical"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/botnav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4FAF93"
            app:menu="@menu/bot_menu"/>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="90dp"
        app:backgroundTint="#4FAF93"
        android:src="@drawable/outline_add_24"
        app:tint="#ffffff" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>
