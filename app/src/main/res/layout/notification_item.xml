<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardNotification"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/notifTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification Title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#44977F" />

            <TextView
                android:id="@+id/notifMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification details go here"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/notifTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sep 25, 2025 7:32 PM"
                android:textSize="12sp"
                android:textColor="#555555"
                android:layout_marginTop="6dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
