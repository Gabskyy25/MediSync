<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#63703d">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#63703d"
        android:gravity="center_vertical">




        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/concertone"
            android:layout_weight="1"
            android:text="Home"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="#fcf9f2" />
    </LinearLayout>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#b5c37c"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#63703d"
                    android:gravity="center">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fredoka"
                        android:text="Benefits of using MediSync"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:layout_marginBottom="8dp" />



                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image1"
                        android:layout_marginBottom="8dp"/>


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image2"
                        android:layout_marginBottom="8dp"/>


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image3"
                        android:layout_marginBottom="8dp"/>


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image4"
                        android:layout_marginBottom="8dp"/>


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image5"
                        android:layout_marginBottom="8dp"/>


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image6"
                        android:layout_marginBottom="8dp"/>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="25dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/alarm"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/circle_shape"
                        android:backgroundTint="#f3e4bd"
                        android:padding="20dp"
                        android:src="@drawable/alarm" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/fredoka"
                        android:text="ALARM"
                        android:textColor="#603620"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="25dp">


                    <ImageView
                        android:id="@+id/contact"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/circle_shape"
                        android:backgroundTint="#f3e4bd"
                        android:src="@drawable/contactinfo"
                        android:padding="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CONTACT"
                        android:textSize="12sp"
                        android:fontFamily="@font/fredoka"
                        android:textColor="#603620"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">


                    <ImageView
                        android:id="@+id/schedule"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/circle_shape"
                        android:backgroundTint="#f3e4bd"
                        android:src="@drawable/schedule"
                        android:padding="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SCHEDULE"
                        android:textSize="12sp"
                        android:fontFamily="@font/fredoka"
                        android:textColor="#603620"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp" />
                </LinearLayout>
            </LinearLayout>



            <FrameLayout
                android:id="@+id/frame_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#b5c37c"
                android:paddingBottom="100dp">




            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
