<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9fbf4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:paddingTop="80dp"
        android:gravity="center"
        android:layout_gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            app:cardCornerRadius="28dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#4FAF93"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/concertone"
                    android:text="Sign Up"
                    android:textColor="@color/white"
                    android:textSize="26sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:text="Caregiver"
                    android:fontFamily="@font/fredoka"
                    android:textColor="#231f20"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editEmail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Email"
                    android:fontFamily="@font/fredoka"
                    android:inputType="textEmailAddress"
                    android:padding="12dp"
                    android:gravity="center_vertical" />

                <EditText
                    android:id="@+id/editPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Password"
                    android:fontFamily="@font/fredoka"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:gravity="center_vertical" />

                <EditText
                    android:id="@+id/confPass"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:fontFamily="@font/fredoka"
                    android:padding="12dp"
                    android:gravity="center_vertical" />

                <EditText
                    android:id="@+id/phonenumber"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Phone Number"
                    android:fontFamily="@font/fredoka"
                    android:inputType="phone"
                    android:padding="12dp"
                    android:gravity="center_vertical" />

                <Button
                    android:id="@+id/btnsignup"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="22dp"
                    android:backgroundTint="#3a8c74"
                    android:fontFamily="@font/fredoka"
                    android:text="Sign Up"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/gobacklogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fredoka"
                    android:layout_gravity="center"
                    android:layout_marginTop="14dp"
                    android:text="Go back to login page"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/termspol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/fredoka"
            android:text="Terms and Policy"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>


