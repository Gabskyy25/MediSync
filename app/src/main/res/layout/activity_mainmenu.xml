<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#603620"
    tools:context=".MainMenu">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#63703d"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/concertone"
            android:text="MediSync"
            android:textColor="#fcf9f2"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/notificationBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="210dp"
            android:src="@drawable/baseline_circle_notifications_24" /> <!-- Make sure you have a suitable icon -->



    </LinearLayout>








    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#b5c37c" />






    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:background="#b5c37c"
        android:layout_height="wrap_content">

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottomAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:backgroundTint="#63703d"
            app:fabCradleMargin="10dp"
            app:fabCradleRoundedCornerRadius="50dp"
            app:fabAlignmentMode="center">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNavigationView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:itemTextColor="@color/white"
                app:labelVisibilityMode="labeled"
                app:menu="@menu/bottom_menu" />
        </com.google.android.material.bottomappbar.BottomAppBar>

        <ImageView
            android:id="@+id/addissuebtn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/baseline_add_24"
            android:background="@drawable/circle_shape"
            android:backgroundTint="@color/white"
            android:layout_gravity="center|center_horizontal"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>
