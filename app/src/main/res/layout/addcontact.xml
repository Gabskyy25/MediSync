<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9FBF4"
    android:gravity="center">

    <LinearLayout
        android:layout_width="358dp"
        android:layout_height="652dp"
        android:layout_gravity="center"
        android:background="@drawable/backgroundinfo2"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="22dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:fontFamily="@font/concertone"
            android:text="Add Contact"
            android:textColor="#231f20"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext_background"
            android:fontFamily="@font/fredoka"
            android:hint="Full Name"
            android:padding="12dp" />

        <EditText
            android:id="@+id/etNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext_background"
            android:fontFamily="@font/fredoka"
            android:hint="Phone Number"
            android:inputType="phone"
            android:padding="12dp" />

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_background"
            android:hint="Address"
            android:padding="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/fredoka"
            android:text="Relationship"
            android:textSize="16sp"
            android:textColor="#231f20"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroupRelation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="20dp">

            <RadioButton
                android:id="@+id/rbSon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fredoka"
                android:textSize="16sp"
                android:text="Son" />

            <RadioButton
                android:id="@+id/rbDaughter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fredoka"
                android:textSize="16sp"
                android:text="Daughter" />

            <RadioButton
                android:id="@+id/rbWife"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fredoka"
                android:textSize="16sp"
                android:text="Wife" />

            <RadioButton
                android:id="@+id/rbHusband"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fredoka"
                android:textSize="16sp"
                android:text="Husband" />
        </RadioGroup>

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="158dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#4FAF93"
            android:fontFamily="@font/fredoka"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</FrameLayout>
