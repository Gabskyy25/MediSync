<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E9FBF4"
    tools:context=".alarm">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#fcf9f2"
        app:cardElevation="12dp"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/backbtn"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/backbtn"
                app:tint="#231f20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alarm"
                android:fontFamily="@font/concertone"
                android:textSize="28sp"
                android:textColor="#231f20"
                android:textStyle="bold"
                android:layout_marginStart="12dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="#7fe1c3"
        app:cardElevation="12dp"
        app:cardCornerRadius="22dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="22dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Alarm Time"
                android:fontFamily="@font/concertone"
                android:textSize="22sp"
                android:textColor="#231f20"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/etAlarmDescription"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter alarm description..."
                android:background="@drawable/edittextrounded"
                android:textColor="#231f20"
                android:textColorHint="#786c51"
                android:fontFamily="@font/fredoka"
                android:paddingHorizontal="14dp"
                android:layout_marginBottom="18dp"
                android:inputType="text" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="18dp"
                app:cardElevation="6dp"
                android:backgroundTint="#fcf9f2"
                android:layout_marginBottom="20dp">

                <TimePicker
                    android:id="@+id/timePicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:timePickerMode="spinner"
                    android:background="#d5ebed"
                    android:padding="10dp"
                    android:layout_gravity="center" />
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnSetAlarm"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="#4faf93"
                android:fontFamily="@font/fredoka"
                android:text="Set Alarm"
                android:textColor="#fcf9f2"
                android:textStyle="bold"
                android:textSize="18sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Swipe right to delete."
        android:textSize="15dp"
        android:layout_gravity="center"
        android:textColor="#a0a3a1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Alarms"
        android:textSize="20sp"
        android:textColor="#000000"
        android:fontFamily="@font/concertone"
        android:textStyle="bold"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fcf9f2"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerAlarms"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp" />

</LinearLayout>